{% extends 'base.html.twig' %}

{% block meta_description %}Forgot!{% endblock %}
{% block title %}Forgot!{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('sign') }}
{% endblock %}
{% block body %}
    <body class="justify-content-center text-center">
        <main class="form-signin w-100 m-auto">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.message }}
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

        <img class="" src="{{ asset('mandala.svg') }}" alt="" width="72" height="72">
        <h2 class="h3 mb-3 fw-normal text-center">Access recovery</h2>

        {% form_theme form with ['bootstrap_5_layout.html.twig', 'form/forgot-form.html.twig'] only %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
        {{ form_errors (form) }}
        </main>
    </body>
{% endblock %}
{% block flash %}{{ include('_flashes.html.twig') }}{% endblock %}
{% block footer %}{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('sign') }}
    {#{{ include('_bitrix24.html.twig') }}#}
{% endblock %}
