{% extends 'base.html.twig' %}
{% block meta_description %}Please, sign in!{% endblock %}
{% block title %}Please, sign in!{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('sign') }}
{% endblock %}
{% block body %}
    {# display any flash message #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{#    TODO: отформатировать сообщение #}

    {% for message in app.flashes('success') %}
        {#        помощь на этой странице https://bootstrap-4.ru/docs/5.1/components/toasts/#}
        <div aria-live="polite" aria-atomic="true" class="bg-dark position-relative bd-example-toasts">
            <div class="toast-container position-absolute p-3 top-0 start-50 translate-middle-x" id="toastPlacement">
                <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        {#                <img src="..." class="rounded me-2" alt="...">#}
                        <strong class="me-auto">Сообщение</strong>
                        {#                <small class="text-muted">11 мин. назад</small>#}
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Закрыть"></button>
                    </div>
                    <div class="toast-body">
                        {{ message }}
                        <div class="mt-2 pt-2 border-top">
                            {#                    <button type="button" class="btn btn-primary btn-sm">Ввести код подтверждения регистрации</button>#}
                            <button type="button" class="btn btn-secondary btn-sm btn-close" data-bs-dismiss="toast">Закрыть</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}





    <body class="text-center">
    {% if error %}
        <div class="alert alert-danger">
            {{ error.message }}
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    {{ form_errors (form) }}
    </body>
{% endblock %}
{% block footer %}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('sign') }}
{% endblock %}
