<form method="post" action="{{ path('products_delete', {'productId': product.productId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.productId) }}">
    <button class="btn">Delete</button>
</form>
