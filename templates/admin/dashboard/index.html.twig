{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <h1>Dashboard</h1>

    <div class="stats">
        <ul>
            <li><strong>Active Vendors:</strong> {{ activeVendors }}</li>
            <li><strong>Published Projects:</strong> {{ publishedProjects }}</li>
            <li><strong>New Customers Today:</strong> {{ newCustomers }}</li>
        </ul>
    </div>

    <div class="notifications">
        <h3>Unread Notifications</h3>
        <ul>
            {% for notif in notifications %}
                <li>{{ notif }}</li>
            {% else %}
                <li>No new notifications</li>
            {% endfor %}
        </ul>
    </div>

    <div style="margin: 1rem 0;">
        <label for="periodSelect"><strong>Период:</strong></label>
        <select id="periodSelect" class="form-select" style="width: auto; display: inline-block; margin-left: 0.5rem;">
            <option value="7" selected>7 дней</option>
            <option value="14">14 дней</option>
            <option value="30">30 дней</option>
        </select>

        <button id="refreshCharts" class="btn btn-primary" style="margin-left: 1rem;">
            🔄 Обновить графики
        </button>
    </div>

    <!-- Toast -->
    <div id="toast" style="
        visibility: hidden;
        min-width: 200px;
        margin-left: -100px;
        background-color: #323232;
        color: #fff;
        text-align: center;
        border-radius: 4px;
        padding: 12px;
        position: fixed;
        z-index: 9999;
        left: 50%;
        bottom: 30px;
        font-size: 14px;
    ">
        Графики обновлены ✅
    </div>

    <div class="charts" style="display: flex; gap: 2rem;">
        <div style="flex: 1;">
            <h3>New Customers</h3>
            <canvas id="customersChart"></canvas>
        </div>
        <div style="flex: 1;">
            <h3>Published Projects</h3>
            <canvas id="projectsChart"></canvas>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        async function loadChart(endpoint, chart, days) {
            const response = await fetch(endpoint.replace('{days}', days));
            const data = await response.json();

            chart.data.labels = data.map(d => d.date);
            chart.data.datasets[0].data = data.map(d => d.count);
            chart.update();
        }

        function showToast() {
            const toast = document.getElementById("toast");
            toast.style.visibility = "visible";
            setTimeout(() => { toast.style.visibility = "hidden"; }, 2500);
        }

        // === Init charts ===
        const customersChart = new Chart(document.getElementById('customersChart').getContext('2d'), {
            type: 'line',
            data: { labels: [], datasets: [{
                    label: 'New Customers',
                    data: [],
                    borderColor: 'rgba(75, 192, 192, 1)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    fill: true, tension: 0.2
                }]},
            options: { responsive: true, plugins: { legend: { position: 'bottom' } }, scales: { y: { beginAtZero: true } } }
        });

        const projectsChart = new Chart(document.getElementById('projectsChart').getContext('2d'), {
            type: 'line',
            data: { labels: [], datasets: [{
                    label: 'Published Projects',
                    data: [],
                    borderColor: 'rgba(153, 102, 255, 1)',
                    backgroundColor: 'rgba(153, 102, 255, 0.2)',
                    fill: true, tension: 0.2
                }]},
            options: { responsive: true, plugins: { legend: { position: 'bottom' } }, scales: { y: { beginAtZero: true } } }
        });

        function refreshAllCharts(showNotice = false) {
            const days = document.getElementById('periodSelect').value;
            loadChart('{{ path("admin_stats_customers", {"days": "{days}"}) }}', customersChart, days);
            loadChart('{{ path("admin_stats_projects", {"days": "{days}"}) }}', projectsChart, days);
            if (showNotice) showToast();
        }

        // Первая загрузка
        refreshAllCharts();

        // Автообновление каждые 60 сек
        setInterval(() => refreshAllCharts(false), 60000);

        // Обновление по кнопке (с тостом)
        document.getElementById('refreshCharts').addEventListener('click', () => {
            refreshAllCharts(true);
        });

        // При смене периода → сразу обновляем графики
        document.getElementById('periodSelect').addEventListener('change', () => {
            refreshAllCharts(true);
        });
    </script>
{% endblock %}
