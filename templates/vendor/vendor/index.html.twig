{% extends 'base.html.twig' %}

{% block title %}Vendors{% endblock %}
{% block header %}<h1>Vendors</h1>{% endblock %}
{% block article_header %}<h1>Vendors index</h1>{% endblock %}
{% block article_content %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Address</th>
                <th>City</th>
                <th>StateId</th>
                <th>CountryId</th>
                <th>Zip</th>
                {#
                <th>VendorCurrency</th>
                <th>VendorAcceptedCurrencies</th>
                <th>VendorParams</th>
                <th>MetaRobot</th>
                <th>MetaAuthor</th>
                <th>createdAt</th>
                <th>CreatedBy</th>
                <th>modifiedAt</th>
                <th>ModifiedBy</th>
                <th>lockedAt</th>
                <th>LockedBy</th>
                #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vendor in vendors %}
            <tr>
                <td>{{ vendor.id }}</td>
                <td>
                    <p>{{ vendor.slug }}</p>
                    {#
                        <p>{{ vendor.lastName }}</p>
                        <p>{{ vendor.middleName }}</p>
                    </td>
                    <th>
                        <p>{{ vendor.phone }}</p>
                        <p>{{ vendor.phoneSecond }}</p>
                        <p>{{ vendor.fax }}</p>
                    </th>
                    <td>{{ vendor.address }}</td>
                    <td>{{ vendor.city }}</td>
                    <td>{{ vendor.stateId }}</td>
                    <td>{{ vendor.countryId }}        <td>{{ vendor.zip }}</td>
                    {#
                    <td>{{ vendor.vendorCurrency }}</td>
                    <td>{{ vendor.vendorAcceptedCurrencies }}</td>
                    <td>{{ vendor.vendorParams }}</td>
                    <td>{{ vendor.metaRobot }}</td>
                    <td>{{ vendor.metaAuthor }}</td>
                    <td>{{ vendor.createdAt ? vendor.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ vendor.createdBy }}</td>
                    <td>{{ vendor.modifiedAt ? vendor.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ vendor.modifiedBy }}</td>
                    <td>{{ vendor.lockedAt ? vendor.lockedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ vendor.lockedBy }}</td>
                    #}
                <td>
                    <a href="{{ path('vendors_show', {'id': vendor.id}) }}">show</a>
                    <a href="{{ path('vendors_edit', {'id': vendor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="25">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% block article_summery %}<p>All Vendors this</p>{% endblock %}
    {% block article_footer %}<a href="{{ path('vendors_new') }}">Create new</a>{% endblock %}
{% endblock %}
