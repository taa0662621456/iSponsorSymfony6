<form method="post" action="{{ path('languages_delete', {'langId': language.langId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ language.langId) }}">
    <button class="btn">Delete</button>
</form>
