# ----------------------------------------
# Composer / PHP dependencies
# ----------------------------------------
/vendor/                # Composer packages
composer.lock           # Lock-файл (часто исключают, но лучше хранить в repo если CI/CD)
/composer.phar          # Локальный бинарь

# ----------------------------------------
# Node / Frontend dependencies
# ----------------------------------------
/node_modules/          # Node packages
yarn.lock               # Yarn lock-файл (по ситуации)
/package-lock.json      # NPM lock-файл
npm-debug.log
yarn-error.log

# Webpack Encore
/public/build/          # Собранные ассеты

# ----------------------------------------
# Symfony specific
# ----------------------------------------
/var/                   # Symfony cache & logs
/var/*
!/var/.gitkeep

# Logs
**/log
**/logs

# Secrets
/config/secrets/dev/dev.decrypt.private.php
/config/secrets/prod/*
/config/secrets/prod/prod.decrypt.private.php
/config/jwt/*.pem       # JWT private/public keys

# Env files
/.env.local
/.env.local.php
/.env.*.local
/.env.prod
/.env.prod.php
/.env.*.prod

# ----------------------------------------
# PHPUnit / Testing
# ----------------------------------------
/.phpunit.result.cache
/phpunit.xml
/phpunit.xml.dist.bak

# ----------------------------------------
# PHP CS Fixer
# ----------------------------------------
.php-cs-fixer.cache
.php_cs.cache
.php-cs-fixer.php       # конфиг обычно коммитят (оставь, если общий)

# ----------------------------------------
# IDE / Editors
# ----------------------------------------
.idea/                  # PhpStorm / JetBrains
/.idea/*
*.iml                  # IntelliJ project files
*.stackdump             # Windows stack dumps
*.swp                   # Vim swap
*.swo

# ----------------------------------------
# Bundles / Assets
# ----------------------------------------
/public/bundles/        # Symfony assets
/public/media/cache/    # LiipImagineBundle cache

# Bootstrap (если качаешь руками)
bootstrap-4.0.0/*

# ----------------------------------------
# RoadRunner
# ----------------------------------------
/bin/rr

# ----------------------------------------
# Custom
# ----------------------------------------
/ver/*                  # твои кастомные временные файлы
/docs/                  # документация, если не нужна в git (иначе убрать)
docker/pwa/             # Docker билды, если не нужно коммитить
