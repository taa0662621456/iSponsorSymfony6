Command/refactor_commands.patch
# ----------------------------------------
# Composer / PHP dependencies
# ----------------------------------------
/vendor/                # Composer packages
/composer.phar          # Локальный бинарь
# composer.lock лучше хранить в репо (для CI/CD), поэтому не игнорим

# ----------------------------------------
# Node / Frontend dependencies
# ----------------------------------------
/node_modules/          # Node packages
npm-debug.log
yarn-error.log
# lock-файлы обычно хранят, чтобы фиксировать версии:
# yarn.lock
# package-lock.json

# Webpack Encore
/public/build/          # Собранные ассеты

# ----------------------------------------
# Symfony specific
# ----------------------------------------
/var/                   # Symfony cache & logs
!/var/.gitkeep          # оставляем заглушку для пустой папки

# Secrets
/config/secrets/dev/dev.decrypt.private.php
/config/secrets/prod/*
/config/jwt/*.pem       # JWT private/public keys

# Env files
/.env.local
/.env.local.php
/.env.*.local
/.env.prod
/.env.prod.php
/.env.*.prod

# ----------------------------------------
# PHPUnit / Testing
# ----------------------------------------
/.phpunit.result.cache
/phpunit.xml
/phpunit.xml.dist.bak

# ----------------------------------------
# PHP CS Fixer
# ----------------------------------------
.php-cs-fixer.cache
.php_cs.cache
# конфиг (.php-cs-fixer.php) лучше хранить в репо

# ----------------------------------------
# IDE / Editors
# ----------------------------------------
.idea/                  # PhpStorm / JetBrains
*.iml                   # IntelliJ project files
*.stackdump             # Windows stack dumps
*.swp                   # Vim swap
*.swo

# ----------------------------------------
# Bundles / Assets
# ----------------------------------------
/public/bundles/        # Symfony assets
/public/media/cache/    # LiipImagineBundle cache

# Bootstrap (если качаешь руками)
/templates/bootstrap-4.0.0/
/templates/bootstrap-5.1.3/

# ----------------------------------------
# RoadRunner
# ----------------------------------------
/bin/rr

# ----------------------------------------
# Custom
# ----------------------------------------
/ver/                   # твои кастомные временные файлы
/docs/                  # если документация не нужна в git (иначе убрать)
/docker/postgres/
/docker/pwa/
/asset/fontawesome-pro/
