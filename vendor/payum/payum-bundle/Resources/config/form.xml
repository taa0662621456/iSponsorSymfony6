<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="payum.available_gateway_factories" type="collection" />
    </parameters>

    <services>
        <defaults public="true" />

        <service id="payum.form.type.credit_card_expiration_date" class="Payum\Core\Bridge\Symfony\Form\Type\CreditCardExpirationDateType">
            <tag name="form.type" />
        </service>

        <service id="payum.form.type.credit_card" class="Payum\Core\Bridge\Symfony\Form\Type\CreditCardType">
            <tag name="form.type" />
        </service>

        <service id="payum.form.type.gateway_config" class="Payum\Core\Bridge\Symfony\Form\Type\GatewayConfigType">
            <argument id="payum" type="service" />

            <tag name="form.type" />
        </service>

        <service id="payum.form.type.gateway_factories_choice" class="Payum\Core\Bridge\Symfony\Form\Type\GatewayFactoriesChoiceType">
            <argument>%payum.available_gateway_factories%</argument>

            <tag name="form.type" />
        </service>

        <service id="payum.form.extension.gateway_factories_choice" class="Payum\Bundle\PayumBundle\Form\Extension\GatewayFactoriesChoiceTypeExtension">
            <argument type="service" id="payum" />

            <tag name="form.type_extension" extended_type="Payum\Core\Bridge\Symfony\Form\Type\GatewayFactoriesChoiceType" />
        </service>
    </services>
</container>